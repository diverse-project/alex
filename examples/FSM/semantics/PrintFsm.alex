behavior printfsm

import ecore "platform:/resource/FSM/model/FSM.genmodel"

open class Machine {
	def String print() {
		return
			"Machine " + obj.name + "\n" +
			obj.states.map[s | alg.$(s).print()].join("\n");
	}
}

open class State {
	def String print() {
		return
			"  State " + obj.name + "\n" +
			obj.outgoing.map[t | alg.$(t).print()].join("\n");
	}
}

open class InitialState {
	override String print() {
		return "INITIAL"
	}
}

open class Transition {
	def String print() {
		return "    " + obj.event + " -> " + obj.target.name
	}
}
