behavior printfsm

import ecore "platform:/resource/FSM/model/FSM.ecore"

open class Machine {
	def String print() {
		return
			"Machine " + self.name + "\n" +
			self.states.map[s | alg.$(s).print()].join("\n");
	}
}

open class State {
	def String print() {
		return
			"  State " + self.name + "\n" +
			self.outgoing.map[t | alg.$(t).print()].join("\n");
	}
}

open class Transition {
	def String print() {
		return "    " + self.event + " -> " + self.target.name
	}
}
