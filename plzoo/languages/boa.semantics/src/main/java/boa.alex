		val vlhs = lhs.eval(ctx)
		val vrhs = rhs.eval(ctx)
		vlhs ==  vrhs
	}
}

open class CmpOpUnequal {
	override Boolean eval(EvalCtx ctx) {
		val vlhs = lhs.eval(ctx)
		val vrhs = rhs.eval(ctx)
		vlhs !=  vrhs
	}
